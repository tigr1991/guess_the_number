.monitor {
  display grid
  justify-items center
}

.mainText {
  display block
  font-size 28px
  padding 4px
  background-color rgba(255, 0, 0, 0.25)
  border-radius 8px
  box-shadow 4px 4px 4px 0 rgba(255, 0, 0, 0.3)
  height 64px
}

.leftAttempts {
  margin 8px
  padding 4px
  font-size 28px
  background-color rgba(0, 255, 0, 0.25)
  border-radius 8px
  box-shadow 4px 4px 4px 0 rgba(0, 255, 0, 0.3)
}

.round {
  padding 12px
  font-size 28px
}